{
  "name": "koa-scoffold",
  "version": "0.0.1",
  "description": "my praiseworthy project",
  "repository": {
    "url": "jiawen geng/koa-scoffold",
    "type": "git"
  },
  "main": "build/index.js",
  "license": "MIT",
  "author": "jiawen geng <technicalcute@gmail.com>",
  "scripts": {
    "start": "tsc -w",
    "server": "nodemon --exec ts-node libs/index.ts",
    "prepare": "husky install",
    "clean": "rimraf build",
    "format": "prettier --write \"{examples,libs,script,bin}/**/*.{js,ts}\" \"**/*.yml\"",
    "format:check": "prettier --list-different \"{examples,libs,script,bin}/**/*.{js,ts}\" \"**/*.yml\"",
    "test": "jest",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "postbuild": "cpy '**/*' '!**/*.ts' ../build/ --cwd=libs --parents"
  },
  "dependencies": {
    "@koa/cors": "4.0.0",
    "@koa/router": "^12.0.0",
    "koa": "^2.13.4",
    "koa-basic-auth": "^4.0.0",
    "koa-body": "6.0.1",
    "koa-compress": "^5.1.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "3.3.0",
    "@types/koa__router": "12.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "18.11.9",
    "@types/jest": "29.2.2",
    "cpy-cli": "^4.2.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nodemon": "2.0.20",
    "rimraf": "3.0.2",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "^10.9.1",
    "prettier": "2.7.1",
    "typescript": "4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css,html,yml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
